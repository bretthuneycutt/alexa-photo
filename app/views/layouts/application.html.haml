%html
  %head
    %title Kids photography, potraits and classes | Alexandra Farias Photography
    %meta{name: "description", content: "Alexandra Farias offers professional photography services, specializing in kids and family portraiture, as well as private tutoring for children."}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{:rel => "icon", :type => "image/png", :href => URL.assets("favicon.ico")}

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-35906652-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    = yield
